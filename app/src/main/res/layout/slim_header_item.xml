<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/location_grid_header"
    android:textAlignment="center"
    android:clickable="true"
    android:focusable="true"
    app:slm_headerDisplay="inline|sticky"
    app:slm_isHeader="true"
    app:slm_section_sectionManager="linear"
    tools:text="Location Set"
    ><!--app:slm_headerEndMargin="56dip"-->
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="8dp"
        android:layoutDirection="locale"
        android:textDirection="locale"
        android:textSize="24sp"
        android:visibility="gone"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        >
        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="2dp"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:textSize="24sp"
            android:textColor="@color/md_white_1000"
            android:text="(Static) Location Set"
            />
        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:paddingBottom="2dp"
            android:layoutDirection="locale"
            android:textDirection="locale"
            android:textColor="@color/md_white_1000"
            />
    </LinearLayout>

</FrameLayout>
