<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:id="@+id/item_background"
    >
    <!--
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:layout_gravity="center_vertical|start"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:id="@+id/add_friend_list_item_image"
        />
        -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_friend_list_item_image"
        android:layout_height="64dp"
        android:layout_width="64dp"
        android:layout_gravity="center_vertical|start"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:paddingLeft="72dp"
        android:paddingRight="54dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/info_wrapper"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/add_friend_list_item_name"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/md_grey_800"
            android:singleLine="true"
            android:fontFamily="Roboto"
            android:textStyle="bold"
            ></TextView>
        <TextView
            android:text="Something..."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_friend_list_item_places"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/md_grey_800"
            android:singleLine="true"
            android:fontFamily="Roboto"
            ></TextView>
        <TextView
            android:text="Some user tagline, epsilon alpha beta phi."
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/person_description"
            android:textSize="14sp"
            android:gravity="center_vertical"
            android:textColor="@color/md_grey_800"
            android:singleLine="true"
            android:fontFamily="Roboto"
            ></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:layout_gravity="end|center_vertical">
        <ImageView
            android:layout_gravity="center"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:id="@+id/add_friend_button"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:focusable="true"
            android:elevation="8dp">
        </ImageView>
    </LinearLayout>
    <View
        android:id="@+id/item_shade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparentblack"
        android:visibility="gone"
        android:elevation="12dp"></View>
</FrameLayout>