<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical">
    <ImageView android:id="@+id/location_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:src="@drawable/everyone50x50"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@color/button_top_color">
    </ImageView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:background="@color/button_bottom_color">
        <LinearLayout
            android:layout_height="68dp"
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:text="Long Beach Island"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_name"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:textColor="@color/button_bottom_text"
                android:singleLine="true"></TextView>
            <TextView
                android:text="numvids"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location_numvids"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:textColor="@color/button_bottom_text"
                android:singleLine="true"
                ></TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|end"
            android:src="@drawable/ic_add_circle_black_24dp"
            android:id="@+id/loc_select_checkmark"
            android:visibility="invisible"/>
    </FrameLayout>
</LinearLayout>