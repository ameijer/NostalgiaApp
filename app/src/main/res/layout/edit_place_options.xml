<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/location_picker_root"
        android:layout_gravity="top|center"
        >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:elevation="1dp"
        android:background="@color/md_deep_purple_50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nearby"
            android:layout_gravity="center"
            style="@style/LocationGridHeader"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nearby_loc_grid_holder"></FrameLayout>
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/create_location_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_add_circle_white_48dp"
        android:elevation="4dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        app:backgroundTint="@color/fab_primary_color"
        app:rippleColor="@color/fab_ripple_color"
        />
</FrameLayout>