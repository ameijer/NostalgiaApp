
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_activity_root"
            tools:context="com.nostalgia.controller.capturemoment.MainCaptureActivity">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="0dp"
                android:id="@+id/camera_holder"></FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/camera_cover_frame"
                android:visibility="visible"></View>
            <include
                android:id="@+id/nostalgia_actionbar_container"
                android:layout_height="60dp"
                android:layout_width="match_parent"
                android:elevation="2dp"
                android:background="@color/transparentblack"
                layout="@layout/nostalgia_actionbar" />
            <com.nostalgia.view.CaptureButton
                android:layout_height="90dp"
                android:layout_width="match_parent"
                android:layout_gravity="bottom|center_horizontal"
                android:soundEffectsEnabled="true"
                android:id="@+id/capture_button"
                android:background="@color/lighttransparentblack"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:focusable="true"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_flash_on_white_48dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:id="@+id/toggle_camera_flash"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="start|center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/video_text_overlay"
                    android:layout_gravity="center"
                    android:id="@+id/countdown"
                    android:textSize="48sp"
                    android:elevation="3dp"/>
                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/flip_camera"
                    android:src="@drawable/ic_camera_rear_white_48dp"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="end|center_vertical"
                    />
            </com.nostalgia.view.CaptureButton>
        </FrameLayout>
    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#AA0000"
        android:choiceMode="singleChoice"
        android:divider="@color/md_blue_grey_500"
        android:dividerHeight="1dp"/>
</android.support.v4.widget.DrawerLayout>